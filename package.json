{
  "name": "api-tester",
  "version": "1.0.0",
  "description": "A Postman-like API testing tool built with Electron",
  "main": "main.js",
  "scripts": {
    "build": "webpack --mode production",
    "build-dev": "webpack --mode development",
    "build-css": "tailwindcss -i ./src/input.css -o ./dist/styles.css",
    "build-css-watch": "tailwindcss -i ./src/input.css -o ./dist/styles.css --watch",
    "start": "npm run build-dev && npm run build-css && electron .",
    "dev": "concurrently \"npm run build-css-watch\" \"webpack --mode development --watch\" \"wait-on dist/index.html && electron .\"",
    "electron": "electron .",
    "dist": "npm run build && npm run build-css && electron-builder",
    "dist:win": "npm run build && npm run build-css && electron-builder --win portable",
    "pack": "npm run build && npm run build-css && electron-builder --dir"
  },
  "keywords": [
    "electron",
    "api",
    "testing",
    "postman"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.13.3",
    "tailwindcss": "^3.4.0"
  },
  "dependencies": {
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-slot": "^1.2.4",
    "axios": "^1.6.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.561.0",
    "react-syntax-highlighter": "^16.1.0",
    "tailwind-merge": "^3.4.0",
    "tailwindcss-animate": "^1.0.7"
  },
  "build": {
    "appId": "com.api-tester.app",
    "productName": "API Tester",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "main.js",
      "package.json",
      "node_modules/**/*"
    ],
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "portable": {
      "artifactName": "${productName}-${version}-portable.exe"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
